<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_outer_child_item"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:orientation="vertical"
    android:background="@color/search_results_child_item_color">

    <TextView
        android:id="@+id/tv_child_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="17dip"
        android:textColor="@color/search_results_child_item_textcolor"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="1"
        android:columnCount="5"
        android:alignmentMode="alignBounds"
        android:layout_weight="1.0"
        android:layout_gravity="right">
        <ImageButton
            android:id="@+id/btn_child_item_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_textsms_24dp"
            android:layout_row="0"
            android:layout_columnWeight="0.2"
            android:layout_column="0" />

        <ImageButton
            android:id="@+id/btn_child_item_tlfMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phonelink_ring_24dp"
            android:layout_row="0"
            android:layout_columnWeight="0.2"
            android:layout_column="1" />

        <ImageButton
            android:id="@+id/btn_child_item_tlfOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_24dp"
            android:layout_row="0"
            android:layout_columnWeight="0.2"
            android:layout_column="2" />

        <ImageButton
            android:id="@+id/btn_child_item_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email_24dp"
            android:layout_row="0"
            android:layout_columnWeight="0.2"
            android:layout_column="3" />

        <ImageButton
            android:id="@+id/btn_child_item_routeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_location_24dp"
            android:layout_row="0"
            android:backgroundTint="@color/blue"
            android:layout_columnWeight="0.2"
            android:layout_column="4" />
    </GridLayout>
</LinearLayout>
