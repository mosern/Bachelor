@model IEnumerable<AdmAspNet.Models.ViewModels.LocationViewModel>

@{
    ViewBag.Title = "Lokasjoner";
}
@section sidebar {
    @Html.Partial("_SidebarPartial")
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Lag ny", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hits)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hits)
        </td>
        <td>
            @Html.ActionLink("Rediger", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id }) |
            @Html.ActionLink("Slett", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
