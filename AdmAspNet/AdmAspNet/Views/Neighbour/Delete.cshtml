@model AdmAspNet.Models.ViewModels.NeighbourViewModel

@{
    ViewBag.Title = "Slett nabo";
}
@section sidebar {
    @Html.Partial("_SidebarPartial")
}
<h2>Slett</h2>

<h3>Er du sikker på at du vil slette?</h3>
<div>
    <h4>Nabo</h4>
    @if (ViewBag.SuccessMessage != null)
    {
        Html.RenderPartial("_SuccessPartial");
    }
    @if (ViewBag.ErrorMessage != null)
    {
        Html.RenderPartial("_ErrorPartial");
    }
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Distance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Distance)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PathPoint1)
        </dt>

        <dd>
           Id: @Html.DisplayFor(model => model.PathPoint1.Id) - Lat: @Html.DisplayFor(model => model.PathPoint1.Coordinate.Lat) - Lng: @Html.DisplayFor(model => model.PathPoint1.Coordinate.Lng)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PathPoint2)
        </dt>
        <dd>
            Id: @Html.DisplayFor(model => model.PathPoint2.Id) - Lat: @Html.DisplayFor(model => model.PathPoint2.Coordinate.Lat) - Lng: @Html.DisplayFor(model => model.PathPoint2.Coordinate.Lng)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Slett" class="btn btn-default" /> |
            @Html.ActionLink("Tilbake til oversikt", "Index")
        </div>
    }
</div>
