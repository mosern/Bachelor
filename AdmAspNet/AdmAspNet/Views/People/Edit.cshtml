
@model AdmAspNet.Models.ViewModels.PeopleViewModel

@{
    ViewBag.Title = "Rediger person";
}
@section sidebar {
    @Html.Partial("_SidebarPartial")
}
<h2>Rediger</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
